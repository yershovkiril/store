.form-group
  = f.label :first_name, class: 'require-field'
  = f.text_field :first_name, class: 'form-control first_name'

.form-group
  = f.label :last_name, class: 'require-field'
  = f.text_field :last_name, class: 'form-control'

.form-group
  = f.label :address, class: 'require-field'
  = f.text_field :address, class: 'form-control'

.form-group
  = f.label :city, class: 'require-field'
  = f.text_field :city, class: 'form-control'

.form-group
  = f.label :country, class: 'require-field'
  = f.collection_select :country_id, Country.all, :id, :name, {}, {class: 'form-control'}

.form-group
  = f.label :zip, class: 'require-field'
  = f.text_field :zip, class: 'form-control'

.form-group
  = f.label :phone, class: 'require-field'
  = f.text_field :phone, class: 'form-control', placeholder: '+380971234567'