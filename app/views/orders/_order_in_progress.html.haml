.table-responsive
  %table.table.cart
    %thead
      %tr
        %th.text-center{:colspan => "2"}= t('book')
        %th= t('books.price')
        %th= t('order.quantity')
        %th= t('order.total')
    %tbody
      - order.order_books.each do |order_book|
        = render 'orders/book_in_progress', order_book: order_book

    %tfoot
      %tr
        %td{colspan: "4", align: "right"}
          %b= t('order.order_total')
        %td= number_to_currency(order.total)

    %tfoot
      %tr
        %td{colspan: "4", align: "right"}
          %b= t('order.subtotal')
        %td= number_to_currency(order.subtotal)
    - if order.coupon
      %tfoot
        %tr
          %td{colspan: "4", align: "right"}
            %b= t('order.discount')
          %td= number_to_currency(order.coupon_discount)

    %tfoot
      %tr
        %td{colspan: "4", align: "right"}
          %b= t('order.shipping')
        %td= number_to_currency(order.shipment_total)

