= form_for([@book, @review]) do |f|
  = error_messages_for(@review)

  .form-group
    = f.label :rating
    = hidden_field(:review, :rating, value: 1)
    .stars

  .form-group
    = f.label :text_review, t('review.text_review')
    = f.text_area :text_review, rows: 10, class: 'form-control'

  = f.submit t('review.add'), class: 'btn btn-primary'
  or
  = link_to(t('review.cancel'), @book)
